<resources>

    <!-- Base application theme. -->
    <!-- Light mode -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/backgroundDay</item>
        <item name="titleTextColor">@color/titleTextDay</item>
        <item name="hinttext">@color/hintTextDay</item>
        <item name="maintext">@color/mainTextDay</item>
        <item name="linltext">@color/linkTextDay</item>
        <item name="backgroundButton">@color/buttonbackgroundDay</item>
        <item name="vectorColor">@color/vectorDay</item>
        <item name="backgroundNavigBar">@color/backgroundNavigBarDay</item>
    </style>








    <style name="darktheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/backgroundNight</item>
        <item name="titleTextColor">@color/titleTextNight</item>
        <item name="hinttext">@color/hintTextNight</item>
        <item name="maintext">@color/mainTextNight</item>
        <item name="linltext">@color/linkTextNight</item>
        <item name="backgroundButton">@color/buttonbackgroundNight</item>
        <item name="vectorColor">@color/vectorNight</item>
        <item name="backgroundNavigBar">@color/backgroundNavigBarNight</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTrans</item>
    </style>

    <style name="WindowAnimationTrans">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">

    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>



</resources>
