<resources>

    <!-- Base application theme. -->
    <!-- Light mode -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorNavigationBar</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorRegText</item>
        <item name="backgroundColor">@color/purple</item>
        <item name="statusBar">@color/colorStatusBar</item>
        <item name="navigBar">@color/colorNavigationBar</item>
        <item name="text">@color/colorRegText</item>
        <item name="hint">@color/colorHintText</item>
        <item name="button">@color/colorButton</item>
        <item name="buttonText">@color/colorButtonText</item>
        <item name="title">@color/colorTitle</item>
        <item name="linkcolor">@color/linkcol</item>
        <item name="itemBackColor">@color/white</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTrans</item>
    </style>

    <style name="darktheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorNavigationBar</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorRegText</item>
        <item name="backgroundColor">#4306FF00</item>
        <item name="statusBar">#43000000</item>
        <item name="navigBar">@color/colorNavigationBar</item>
        <item name="text">#00FFE6</item>
        <item name="hint">@color/colorHintText</item>
        <item name="button">#00FFE5</item>
        <item name="buttonText">#00FF99</item>
        <item name="title">@color/colorTitle</item>
        <item name="itemBackColor">#F6F6F6</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTrans</item>
    </style>

    <style name="WindowAnimationTrans">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>
